<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Date input: opens DatePicker on click, no keyboard -->

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight Tracker"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/> <!-- add margin below the label -->

    <!-- Weight input: numeric only -->
    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select date"
        android:focusable="false"
        android:clickable="true"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter weight"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp"/>

    <!-- Submit button -->
    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:text="Submit"
        android:contentDescription="Button to submit the new weight entry" />
</LinearLayout>